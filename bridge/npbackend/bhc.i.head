 %#endif
    {
        %#if PY_MAJOR_VERSION >= 3
            temp[i] = PyLong_AsLong(o);
        %#else
            temp[i] = PyInt_AsLong(o);
        %#endif
    } else
    {
        PyErr_SetString(PyExc_ValueError,"Sequence elements must be Python integers");
        return NULL;
    }
    Py_DECREF(o);
  }
  $1 = temp;
}
